<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <include
        android:id="@+id/header"
        layout="@layout/main_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_below="@+id/header"
        android:layout_marginTop="-30dp"
        android:background="@drawable/bg_main_activity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_batik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_top_left"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:elevation="2dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="30dp">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_batik"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_light"
                    android:text="Batik" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_musium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_top_right"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="30dp">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_museum"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Museum"
                    android:fontFamily="@font/quicksand_light"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_daerah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_bottom_left"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="30dp">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_map"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daerah"
                    android:fontFamily="@font/quicksand_light"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_corona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_bottom_right"
                android:clickable="true"
                android:focusable="true"
                android:elevation="2dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="30dp">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_coronavirus"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Covid-19"
                    android:fontFamily="@font/quicksand_light"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>